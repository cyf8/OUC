/*区域1：视频组件样式*/
video{
  width:100%;
}

/*————————区域2——————*/
/*2-1：弹幕控制样式*/
.danmuArea{
  display:flex;
  flex-direction: row;
}

/*2-2：文本输入样式*/
input{
  border:1rpx solid #987938; /*实线棕色边框*/
  flex-grow:1;    /*扩张水平空间*/
  height:100rpx;  /*与按钮上下高度一致*/
}

/*2-3：按钮样式*/
button{
  color:white;
  background-color:#987938;
}

/*——————区域3——————*/
/*3-1 视频列表区域*/
.videoList{
  width:100%;
  min-height:400rpx;
}

/*3-2 当行列表区域样式*/
.videoBar{
  width:95%;
  display:flex;
  flex-direction: row;
  border-bottom:1rpx solid #987938; 
  margin:10rpx; /*外边距*/
}

/*3-3 播放图标样式*/
image{
  width:70rpx;
  height:70rpx;
  margin:20rpx;
}

/*3-4 文本标题样式*/
text{
  font-size:45rpx;
  color:#987938;
  margin:20rpx;
  flex-grow:1;
}


